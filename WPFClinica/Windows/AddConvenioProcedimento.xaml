<Window x:Class="WPFClinica.Windows.AddConvenioProcedimento"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFClinica.Windows"
        mc:Ignorable="d"
        Title="Adicionar Convênio a Procedimento" Height="240" Width="400">
    <Grid>
        <StackPanel Margin="5">
            <TextBlock Foreground="Gray">Procedimento laboratorial</TextBlock>
            <TextBlock FontSize="15" Name="ProcedimentoTBL">???</TextBlock>
            <TextBlock Foreground="Gray" Margin="0,10,0,0">Convênio</TextBlock>
            <ComboBox Name="ConvenioCB"></ComboBox>
            <TextBlock Foreground="Gray" Margin="0,10,0,0">Valor</TextBlock>
            <TextBox FontSize="15" Name="ValorTB"></TextBox>
            <Button Margin="0,20,0,0" Padding="10,2,10,2" Name="AdicionarB" Click="AdicionarB_Click" FontSize="15">Adicionar</Button>
        </StackPanel>
    </Grid>
</Window>
