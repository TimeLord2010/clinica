<Window x:Class="WPFClinica.Windows.EscolherConvenio"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFClinica.Windows"
        mc:Ignorable="d"
        Title="EscolherConvenio" Height="300" Width="400">
    <Grid>
        <StackPanel Margin="5">
            <TextBlock Foreground="Gray">Procedimento</TextBlock>
            <TextBox FontSize="15" Name="NomeProcedimentoTB" IsEnabled="False">???</TextBox>
            <TextBlock Margin="0,10,0,0" Foreground="Gray">Convênio</TextBlock>
            <TextBox FontSize="15" Name="NomeConvenioTB" TextChanged="NomeConvenioTB_TextChanged"></TextBox>
        </StackPanel>
        <DataGrid Margin="5,100,5,40" Name="ConveniosDG"></DataGrid>
        <Button HorizontalAlignment="Right" VerticalAlignment="Bottom" FontSize="15" Padding="6,2,6,2" Margin="5" Name="EscolherB" Click="EscolherB_Click">Escolher</Button>
    </Grid>
</Window>
