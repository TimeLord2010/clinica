<Window x:Class="WPFClinica.Windows.AddTipoProcedimento"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFClinica.Windows"
        mc:Ignorable="d"
        Title="AddTipoProcedimento" Height="160" Width="400">
    <Grid>
        <StackPanel Margin="5">
            <TextBlock Foreground="Gray">
                Nome to tipo de procedimento médico
            </TextBlock>
            <TextBox FontSize="15" Name="NomeTB" Margin="0,2,0,0"></TextBox>
            <Button Margin="0,10,0,0" FontSize="15" Padding="2" Name="CriarB" Click="CriarB_Click">
                Criar
            </Button>
            <Button Margin="0,10,0,0" FontSize="15" Name="DeletarB" Click="DeletarB_Click">
                Deletar
            </Button>
        </StackPanel>
    </Grid>
</Window>
