<Window x:Class="WPFClinica.Windows.EscolherNaoMedico"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFClinica.Windows"
        mc:Ignorable="d"
        Title="Escolher Função" Height="220" Width="200" WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <Style TargetType="{x:Type RadioButton}">
            <Setter Property="FontSize" Value="15"></Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <StackPanel Margin="10" HorizontalAlignment="Center">
            <RadioButton Margin="5" Name="FonoaudiologoRB">FonoAudiologo</RadioButton>
            <RadioButton Margin="5" Name="PsicologoRB">Psicologo</RadioButton>
            <RadioButton Margin="5" Name="NutricionistaRB">Nutricionista</RadioButton>
            <RadioButton Margin="5" Name="DentistaRB">Dentista</RadioButton>
            <Button Margin="10" FontSize="15" Name="EscolherB" Click="EscolherB_Click" Padding="6,2,6,2">Escolher</Button>
        </StackPanel>
    </Grid>
</Window>
