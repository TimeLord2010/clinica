<Window x:Class="WPFClinica.Windows.AdicionarProcedimentoLab"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFClinica.Windows"
        mc:Ignorable="d"
        Title="Adicionar Procedimento" Height="240" Width="300" WindowStyle="ToolWindow">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="1" Margin="5">
            <StackPanel>
                <TextBlock Foreground="Gray" Margin="0,5,0,0">Nome</TextBlock>
                <TextBox FontSize="15" Name="ProcedimentoTB"></TextBox>
                <TextBlock Foreground="Gray" Margin="0,10,0,0">Convênio</TextBlock>
                <TextBox x:Name="ConvênioTB" FontSize="15"></TextBox>
                <TextBlock Foreground="Gray" Margin="0,10,0,0">Valor</TextBlock>
                <TextBox FontSize="15" Name="ValorTB"></TextBox>
            </StackPanel>
            <StackPanel HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="5">
                <Button FontSize="15" Padding="10,2,10,2" Name="AdicionarB" Click="AdicionarB_Click">Adicionar</Button>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
