<Window x:Class="WPFClinica.Windows.CriarEspecializacao"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFClinica.Windows"
        mc:Ignorable="d"
        Title="Criar especialização" Height="200" Width="300">
    <Grid>
        <StackPanel Margin="5">
            <TextBlock Foreground="Gray">Nome</TextBlock>
            <TextBox FontSize="15" Name="NomeEspecializacaoTB"></TextBox>
            <TextBlock Foreground="Gray" Margin="0,10,0,0">Valor por consulta</TextBlock>
            <TextBox FontSize="15" Name="ValorConsultaTB"></TextBox>
            <Button FontSize="15" Padding="6,2,6,2" Margin="0,15,0,0" Name="CriarB" Click="CriarB_Click">Criar</Button>
        </StackPanel>
    </Grid>
</Window>