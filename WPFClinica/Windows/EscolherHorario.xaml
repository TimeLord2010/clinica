<Window x:Class="WPFClinica.Windows.EscolherHorario"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFClinica.Windows"
        mc:Ignorable="d"
        Title="Escolher Horário" Height="180" Width="150" WindowStyle="ToolWindow">
    <Grid>
        <StackPanel Margin="5">
            <TextBlock Foreground="Gray">Início</TextBlock>
            <StackPanel Orientation="Horizontal">
                <TextBox FontSize="15" Width="50" Name="IHoraTB"></TextBox>
                <TextBlock Margin="5,0,5,0">:</TextBlock>
                <TextBox FontSize="15" Width="50" Name="IMinutoTB"></TextBox>
            </StackPanel>
            <TextBlock Foreground="Gray" Margin="0,10,0,0">Fim</TextBlock>
            <StackPanel Orientation="Horizontal">
                <TextBox Width="50" FontSize="15" Name="FHoraTB"></TextBox>
                <TextBlock Margin="5,0,5,0">:</TextBlock>
                <TextBox Width="50" FontSize="15" Name="FMinutoTB"></TextBox>
            </StackPanel>
            <Button Margin="10" HorizontalAlignment="Center" Padding="5,3,5,3" FontSize="15" Name="OkB" Click="OkB_Click">Ok</Button>
        </StackPanel>
    </Grid>
</Window>
