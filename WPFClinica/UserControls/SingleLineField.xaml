<UserControl x:Class="WPFClinica.UserControls.SingleLineField"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFClinica.UserControls"
             mc:Ignorable="d" d:DesignHeight="100" d:DesignWidth="400">
    <Grid Background="White" Margin="2,5,2,5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="2.5*"/>
        </Grid.ColumnDefinitions>
        <TextBlock VerticalAlignment="Top" Name="HeaderTBL" TextWrapping="Wrap">[Field]</TextBlock>
        <TextBox Grid.Column="1" Name="FieldTB" AcceptsReturn="True" AcceptsTab="True" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto"/>
    </Grid>
</UserControl>
